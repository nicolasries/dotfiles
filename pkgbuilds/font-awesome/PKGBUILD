pkgname=font-awesome
pkgrel=1
pkgver=4.6.3
pkgdesc="Font Awsome"
arch=(any)
depends=(fontconfig xorg-font-utils)
source=("https://github.com/FortAwesome/Font-Awesome/archive/v$pkgver.zip")
install=$pkgname.install

package()                                                                                                                                                                                  
{                                                                                                                                                                                          
install -Dm644 Font-Awesome-$pkgver/fonts/FontAwesome.otf "$pkgdir"/usr/share/fonts/fontawesome/font.otf
} 
md5sums=('6949253c80129e58bcd0280a416cdba0')
