post_upgrade()
{
    printf 'Updating font cache... '

    fc-cache -s >/dev/null
    mkfontscale usr/share/fonts/TTF
    mkfontdir usr/share/fonts/TTF

    echo 'done.'
}

post_remove()
{
    post_upgrade
}

post_install()
{
    post_upgrade

    echo '>>> The font files have been installed into /usr/share/fonts/TTF/.'
}

